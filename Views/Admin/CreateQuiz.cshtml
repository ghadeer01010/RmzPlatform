@model RmzPlatform.Models.Quiz

@{
    ViewData["Title"] = "إضافة سؤال جديد";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var language = ViewBag.Language as List<RmzPlatform.Models.Language>;
}

<div class="container mt-4">
    <h2 class="mb-4">إضافة سؤال</h2>

    <form asp-action="CreateQuiz" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="QuestionText" class="form-label">السؤال</label>
            <input asp-for="QuestionText" class="form-control" />
            <span asp-validation-for="QuestionText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionA" class="form-label">الخيار 1</label>
            <input asp-for="OptionA" class="form-control" />
            <span asp-validation-for="OptionA" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionB" class="form-label">الخيار 2</label>
            <input asp-for="OptionB" class="form-control" />
            <span asp-validation-for="OptionB" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionC" class="form-label">الخيار 3</label>
            <input asp-for="OptionC" class="form-control" />
            <span asp-validation-for="OptionC" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OptionD" class="form-label">الخيار 4</label>
            <input asp-for="OptionD" class="form-control" />
            <span asp-validation-for="OptionD" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CorrectAnswer" class="form-label">الإجابة الصحيحة</label>
            <input asp-for="CorrectAnswer" class="form-control" />
            <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LanguageId" class="form-label">اختر اللغة</label>
            <select asp-for="LanguageId" class="form-select" asp-items="@(new SelectList(language, "Id", "Name"))">
                <option value="">-- اختر لغة --</option>
            </select>
            <span asp-validation-for="LanguageId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">حفظ</button>
        <a asp-action="Quiz" class="btn btn-secondary">رجوع</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}