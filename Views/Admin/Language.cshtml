@model List<Language>
    @{
      
        ViewData["Title"]="ادارة اللغات";
          Layout="~/Views/Shared/_AdminLayout.cshtml";
    }
    <div class="container mt-4">
        <h2>ادارة لغات البرمجة</h2>
       <a asp-controller="Admin" asp-action="CreateLanguage" class="btn btn-primary mb-3">اضافة لغة جديدة</a>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th> اسم اللغة</th>
                    <th>وصف اللغة</th>
                    <th>خيارات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lang in Model)
                {
                    <tr>
                        <td>@lang.Name</td>
                        <td>@lang.Description</td>
                        <td>
                         <a asp-controller="Admin" asp-action="EditLanguage" asp-route-id="@lang.Id" class="me-2"><i class="bi bi-pen-fill"></i></a>
                        <a asp-action="DeleteLanguage" asp-route-id="@lang.Id" class="me-2"
                            onclick="return confirm('هل أنت متأكد أنك تريد حذف هذه اللغة ؟');"> <i class="bi bi-trash-fill"></i>
                        </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>