<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة تحكم المشرف</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RmzPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <style>
    
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            min-height: 100vh;
           background: linear-gradient(to left, #254141, #4ba299);
            padding: 20px;
            color: rgb(4, 61, 37);
             
        }

        .sidebar .nav-link {
            color: rgb(4, 61, 37);
            margin-bottom: 12px;
            transition: background-color 0.3s, padding 0.2s;
        }

        .sidebar .nav-link:hover {
            background-color:#25c9b8;
            border-radius: 8px;
            padding-right: 15px;
        }

        .navbar {
      background: linear-gradient(to right, #254141, #4ba299);
            color: rgb(4, 61, 37);
        }

        .navbar-brand, .navbar .text-white {
            color: rgb(4, 61, 37); !important;
        }

        footer {
            background-color: #F5F9FB;
            color:rgb(4, 61, 37);
        }
    </style>
</head>
<body>
    <!-- الهيدر -->
    <header class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand" href="#">لوحة التحكم</a>
        <div class="ms-auto text-white">مرحبًا @TempData["username"]</div>
    </header>

    <!-- المحتوى -->
    <div class="container-fluid">
        <div class="row">
            <!-- القائمة الجانبية -->
            <div class="col-md-2 sidebar">
                <h5 class="mb-4">القائمة</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Index" class="nav-link">
                            <i class="bi bi-house-door"></i> الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Language" class="nav-link">
                            <i class="bi bi-code-square"></i> اللغات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Quiz" class="nav-link">
                            <i class="bi bi-question-circle"></i> الأسئلة
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Result" class="nav-link">
                            <i class="bi bi-bar-chart-line"></i> نتائج المستخدمين
                        </a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout"></a>
                            <i class="bi bi-box-arrow-right"></i> تسجيل الخروج
                        </a>
                    </li>
                </ul>
            </div>

            <!-- المنطقة الرئيسية -->
            <main class="col-md-10 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- الفوتر -->
    <footer class="text-center py-3 border-top mt-auto">
        &copy; 2025 جميع الحقوق محفوظة - رمّز
    </footer>

    <!-- السكربتات -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



